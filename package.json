{
  "name": "de-uplc",
  "displayName": "de-uplc",
  "description": "Debugger for UPLC (Untyped Plutus Core) language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "plutus-types-json",
        "aliases": [
          "Plutus Types JSON",
          "ptypes"
        ],
        "extensions": [
          ".pludata"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "uplc",
        "aliases": [
          "UPLC",
          "Untyped Plutus Core"
        ],
        "extensions": [
          ".uplc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[uplc]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "grammars": [
      {
        "language": "plutus-types-json",
        "scopeName": "source.plutus-types-json",
        "path": "./syntaxes/plutus-types.tmLanguage.json"
      },
      {
        "language": "uplc",
        "scopeName": "source.uplc",
        "path": "./syntaxes/uplc.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "uplc",
        "scopes": {
          "namespace": [
            "entity.name.namespace.uplc"
          ],
          "type": [
            "entity.name.type.uplc",
            "entity.name.type",
            "storage.type"
          ],
          "class": [
            "entity.name.class.uplc",
            "support.class"
          ],
          "enum": [
            "entity.name.enum.uplc"
          ],
          "interface": [
            "entity.name.interface.uplc"
          ],
          "struct": [
            "entity.name.struct.uplc"
          ],
          "typeParameter": [
            "entity.name.type.parameter.uplc"
          ],
          "parameter": [
            "variable.parameter.uplc"
          ],
          "variable": [
            "variable.other.uplc",
            "variable.function"
          ],
          "property": [
            "variable.other.property.uplc"
          ],
          "enumMember": [
            "constant.language.boolean.uplc"
          ],
          "event": [
            "entity.name.event.uplc",
            "invalid.illegal.error.uplc"
          ],
          "function": [
            "entity.name.function.uplc",
            "entity.name.function"
          ],
          "method": [
            "entity.name.method.uplc"
          ],
          "macro": [
            "keyword.control.macro.uplc"
          ],
          "keyword": [
            "keyword.control.uplc",
            "keyword.other"
          ],
          "modifier": [
            "storage.modifier.uplc"
          ],
          "comment": [
            "comment.uplc"
          ],
          "string": [
            "string.quoted.uplc"
          ],
          "number": [
            "constant.numeric.uplc"
          ],
          "regexp": [
            "string.regexp.uplc"
          ],
          "operator": [
            "keyword.operator.uplc"
          ]
        }
      }
    ],
    "commands": [
      {
        "command": "termViewer.toggleBreakpoint",
        "title": "Toggle Term Breakpoint",
        "category": "Term Viewer"
      },
      {
        "command": "termViewer.toggleInlayHints",
        "title": "Toggle Inlay Hints",
        "category": "Term Viewer"
      },
      {
        "command": "deuplc.newSession",
        "title": "New Session",
        "icon": "$(refresh)"
      },
      {
        "command": "uplcTree.showNodeInTab",
        "title": "Show Node in Tab",
        "icon": "$(arrow-circle-right)"
      },
      {
        "command": "extension.startSession",
        "title": "Start (Simulated) Session"
      },
      {
        "command": "extension.endSession",
        "title": "End (Simulated) Session"
      },
      {
        "command": "breakpointsTreeDataProvider.removeBreakpoint",
        "title": "Remove Breakpoint",
        "category": "Breakpoints"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deuplcSideBar",
          "title": "UPLC Debugger",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "deuplcSideBar": [
        {
          "type": "webview",
          "id": "debuggerPanelView",
          "name": "Main Controls",
          "initialSize": "1000px"
        },
        {
          "type": "webview",
          "id": "additionalControlsView",
          "name": "Additional Controls",
          "initialSize": "100px"
        },
        {
          "type": "tree",
          "id": "machineContextTreeDataProvider",
          "name": "Machine Context"
        },
        {
          "type": "tree",
          "id": "machineStateTreeDataProvider",
          "name": "Machine State"
        },
        {
          "type": "tree",
          "id": "environmentsTreeDataProvider",
          "name": "Environments"
        },
        {
          "type": "tree",
          "id": "logsTreeDataProvider",
          "name": "Logs"
        },
        {
          "type": "tree",
          "id": "breakpointsTreeDataProvider",
          "name": "Breakpoints"
        }
      ]
    },
    "menus": {
      "editor/lineNumber/context": [
        {
          "command": "termViewer.toggleBreakpoint",
          "when": "resourceScheme == term-viewer && editorLineNumber in termViewer.possibleBreakpointLines",
          "group": "navigation@1",
          "args": [
            "${lineNumber}"
          ]
        }
      ],
      "view/item/context": [
        {
          "command": "uplcTree.showNodeInTab",
          "group": "inline",
          "when": "((view == machineContextTreeDataProvider || view == machineStateTreeDataProvider || view == environmentsTreeDataProvider) && viewItem == uplcNode) || (view == logsTreeDataProvider && viewItem == logEntry)"
        },
        {
          "command": "breakpointsTreeDataProvider.removeBreakpoint",
          "when": "view == breakpointsTreeDataProvider && (viewItem == activeBreakpoint || viewItem == inactiveBreakpoint)",
          "group": "breakpoint"
        }
      ],
      "view/title": [
        {
          "command": "deuplc.newSession",
          "when": "view == deuplcSideBar",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceScheme == term-viewer",
          "command": "termViewer.toggleBreakpoint",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "termViewer.toggleBreakpoint",
        "key": "F9",
        "when": "resourceScheme == term-viewer"
      },
      {
        "command": "termViewer.toggleInlayHints",
        "key": "ctrl+alt+h",
        "when": "resourceScheme == term-viewer"
      }
    ],
    "configuration": {
      "title": "DE-UPLC",
      "properties": {
        "deuplc.enableInlayHints": {
          "type": "boolean",
          "default": true,
          "description": "Enable inlay hints in the term viewer."
        },
        "deuplc.providers.koios.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional Koios API key. Leave empty if not required."
        },
        "deuplc.providers.timeout": {
          "type": "number",
          "default": 30000,
          "description": "HTTP timeout for data providers in milliseconds."
        },
        "deuplc.providers.retryAttempts": {
          "type": "number",
          "default": 3,
          "description": "Number of retry attempts for transient provider errors."
        },
        "deuplc.providers.offline.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable offline data provider (file-based)."
        },
        "deuplc.providers.offline.filePath": {
          "type": "string",
          "default": "",
          "pattern": "^(?:[a-zA-Z]:\\\\|[\\\\/])?(?:[^<>:\"|?*\\\\\/\\r\\n]+[\\\\/])*[^<>:\"|?*\\\\\/\\r\\n]*\\.json$|^$",
          "patternErrorMessage": "Must be a valid file path ending with .json extension",
          "markdownDescription": "Path to JSON file containing offline UTXOs and protocol parameters."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node node_modules/webpack/bin/webpack.js",
    "watch": "node node_modules/webpack/bin/webpack.js --watch",
    "package": "node node_modules/webpack/bin/webpack.js --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "generate-schemas": "cd rust-src && cargo run --bin generate_schemas",
    "generate-types": "node scripts/generate-types.js",
    "generate-all": "npm run generate-schemas && npm run generate-types",
    "build:extension": "./build-extension.sh",
    "release": "./release-extension.sh",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/json-bigint": "^1.0.4",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.0",
    "eslint": "^9.13.0",
    "file-loader": "^6.2.0",
    "json-schema-to-typescript": "^15.0.4",
    "jsonc-parser": "^3.3.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "de-uplc": "file:./rust-src/pkg/",
    "json-bigint": "^1.0.0"
  }
}
